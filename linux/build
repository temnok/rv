#!/usr/bin/env sh
set -e
cd $(dirname "$0")

docker/build

docker run -ti --rm \
    -v $(pwd)/work:/home/user/work \
    rv-linux-build \
    bash build

rm -rf output/*
gzip -9 -n -c work/_build/opensbi/build/platform/generic/firmware/fw_payload.bin > output/rv64.kernel.gz
#gzip -9 -n -c work/_build/initramfs/initramfs.cpio > output/rv64.initramfs.cpio.gz
